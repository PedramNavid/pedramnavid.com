<svg class="bird-logo" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="48" height="48">
  <defs>
    <!-- Define animation keyframes for wing flapping -->
    <style>
      @keyframes flap-wings {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-2px); }
      }
      
      @keyframes move-head {
        0%, 100% { transform: translateX(0) translateY(0); }
        25% { transform: translateX(1px) translateY(0); }
        50% { transform: translateX(0) translateY(-1px); }
        75% { transform: translateX(-1px) translateY(0); }
      }
      
      @keyframes bob-body {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(1px); }
      }
      
      .bird-logo:hover .wing-left {
        animation: flap-wings 0.2s ease-in-out infinite;
        transform-origin: 10px 10px;
      }
      
      .bird-logo:hover .wing-right {
        animation: flap-wings 0.2s ease-in-out infinite;
        animation-delay: 0.1s;
        transform-origin: 14px 10px;
      }
      
      .bird-logo:hover .bird-head {
        animation: move-head 0.4s ease-in-out infinite;
        transform-origin: 12px 5px;
      }
      
      .bird-logo:hover .bird-body-group {
        animation: bob-body 0.4s ease-in-out infinite;
        transform-origin: 12px 12px;
      }
    </style>
  </defs>
  
  <!-- Background for visibility -->
  <rect x="0" y="0" width="24" height="24" class="bird-bg" rx="4"/>
  <rect x="1" y="1" width="22" height="22" class="bird-bg-inner" rx="3"/>
  
