<style>
  .bird-logo {
    @apply w-12 h-12 rounded cursor-pointer transition-transform duration-200;
    image-rendering: pixelated;
  }
  
  .bird-logo:hover {
    transform: scale(1.1);
  }
  
  /* Light mode colors */
  .bird-bg { 
    fill: #e7e5e4; /* stone-200 */
  }
  .bird-bg-inner { 
    fill: #f5f5f4; /* stone-100 */
  }
  .bird-body { 
    fill: #404040; /* neutral-700 */
  }
  .bird-eye { 
    fill: #000000; 
  }
  .bird-beak { 
    fill: #171717; /* neutral-900 */
  }
  .bird-legs { 
    fill: #ea580c; /* orange-600 */
  }
  .bird-accent { 
    fill: #737373; /* neutral-500 */
  }
  
  /* Dark mode colors */
  :global(.dark) .bird-bg { 
    fill: #1c1917; /* stone-900 */
  }
  :global(.dark) .bird-bg-inner { 
    fill: #292524; /* stone-800 */
  }
  :global(.dark) .bird-body { 
    fill: #ffffff; 
  }
  :global(.dark) .bird-eye { 
    fill: #000000; 
  }
  :global(.dark) .bird-beak { 
    fill: #525252; /* neutral-600 */
  }
  :global(.dark) .bird-legs { 
    fill: #fb923c; /* orange-400 */
  }
  :global(.dark) .bird-accent { 
    fill: #e5e5e5; /* neutral-200 */
  }
</style>