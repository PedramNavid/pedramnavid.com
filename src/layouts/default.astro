---
import { SITE } from '$/config'
import BaseHead from '$/components/BaseHead.astro';
import MainLayout from '$/components/MainLayout.astro';

const { content, showPageHeader = true } = Astro.props

// Use static OG image
const ogImage = new URL('/og-image.svg', Astro.url.origin).toString();
---
<!doctype html>
<html lang="en">
    <head>
        <BaseHead title={ content.title ? `${ SITE.title } | ${content.title}` : SITE.title } description={ content.description } image={ogImage}/>
    </head>
    <MainLayout>
        {showPageHeader &&
            <div class="page__header">
                <h1 class="page__title">{content.title}</h1>
                <h5 class="page__desc">{content.description}</h5>
            </div>
        }
        <slot />
    </MainLayout>
</html>
<style>
    .page__header {
        @apply py-12 mb-12 text-center
    }
    .page__title {
        @apply text-4xl md:text-5xl font-bold text-gray-900 dark:text-gray-100 mb-4
    }
    .page__desc {
        @apply text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto
    }
</style>
